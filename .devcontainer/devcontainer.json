{
    "name": "FastAPI Supabase Development",
    "runArgs": [
        "--network=host"
    ],
    // "dockerComposeFile": "../compose-ci.yaml",
    // "service": "dev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": "..",
        "args": {
            "USERNAME": "vscode",
            "USER_UID": "1000",
            "USER_GID": "1000",
            "BUILD_ENV": "dev"
        }
    },
    "containerEnv": {
        "PYTHONPATH": "/app",
        "UV_CACHE_DIR": "/app/.cache/uv",
        "UV_SYSTEM_PYTHON": "/usr/local/bin/python",
        "UV_LINK_MODE": "copy"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    }
                },
                "git.autofetch": true,
                "git.autofetchPeriod": 3600,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.analysis.extraPaths": [
                    "/app"
                ],
                "python.linting.enabled": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.organizeImports": "explicit"
                },
                "[python]": {
                    "editor.defaultFormatter": "astral-sh.ruff-vscode",
                    "editor.formatOnSave": true,
                    "editor.formatOnPaste": false
                },
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.nosetestsEnabled": false,
                "ruff.enable": true,
                "ruff.format.args": ["--select", "I"],
                "python.analysis.autoImportCompletions": true,
                "autoDocstring.docstringFormat": "google"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "astral-sh.ruff-vscode",
                "matangover.mypy",
                "charliermarsh.pytest",
                "njpwerner.autodocstring",
                "github.vscode-github-actions"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        }
    },
    "workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "remoteUser": "vscode",
    "mounts": [
        "source=uv-cache,target=/app/.cache/uv,type=volume"
    ],
    "updateContentCommand": "echo 'export PATH="$HOME/.local/bin:$PATH"' >> ~/.bashrc && pip install --user pre-commit && uv sync --all-groups --dev && pre-commit install"
}