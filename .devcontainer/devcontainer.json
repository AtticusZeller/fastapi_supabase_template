{
  "name": "FastAPI Supabase Development",
  "runArgs": [
    "--network=host"
  ],
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000",
      "BUILD_ENV": "dev"
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/app",
    "UV_CACHE_DIR": "/app/.cache/uv",
    "UV_SYSTEM_PYTHON": "/usr/local/bin/python",
    "UV_LINK_MODE": "copy"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        },
        "git.autofetch": true,
        "git.autofetchPeriod": 3600,
        "git.enableCommitSigning": false,
        "github.gitAuthentication": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.extraPaths": [
          "/app"
        ],
        "python.linting.enabled": true,
        "python.linting.mypyEnabled": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "mypy.runUsingActiveInterpreter": true,
        "mypy.configFile": "backend/pyproject.toml",
        "mypy.targets": [
          "backend"
        ]
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "github.vscode-github-actions",
        "matangover.mypy",
        "njpwerner.autodocstring",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    }
  },
  "workspaceFolder": "/app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
  "remoteUser": "vscode",
  "mounts": [
    "source=uv-cache,target=/app/.cache/uv,type=volume",
    "source=${localWorkspaceFolder}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.gh,target=/home/vscode/.gh,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.gnupg,target=/home/vscode/.gnupg,type=bind,consistency=cached,ro"
  ],
  "postCreateCommand": "bash .devcontainer/setup-gpg.sh && git config --global --add safe.directory . && pre-commit install"
}
